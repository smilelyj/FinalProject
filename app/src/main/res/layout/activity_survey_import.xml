<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
xmlns:tools="http://schemas.android.com/tools"
style="@style/AppTheme"
android:paddingBottom="@dimen/activity_vertical_margin"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
android:gravity="center_horizontal"
android:orientation="vertical">

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id = "@+id/tv_import_title"
    android:gravity="start"
    android:measureWithLargestChild="true"
    android:text="@string/text_import_questions"
    android:textSize="30sp"
    android:textAllCaps="true"
    android:textColor="@color/text_icons"
    android:layout_margin="2dp"
    android:orientation="horizontal">
</TextView>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:id="@+id/linearLayout">
    <Button
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:text="@string/text_no_thanks"
        android:id="@+id/button_skip_import"
        android:background="@drawable/button_yellow"
        />
</LinearLayout>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView_template_List"
        android:layout_alignEnd="@+id/tv_import_title"
        android:layout_below="@+id/tv_import_title"
        android:layout_above="@+id/linearLayout" />


</RelativeLayout>