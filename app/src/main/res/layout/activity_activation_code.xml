<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    style="@style/AppTheme"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:clickable="true"
    android:id= "@+id/admin_login_layout">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/text_activation_code"
        android:id="@+id/code_title"
        android:layout_marginTop="59dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/edit_text_code"
        android:textAllCaps="true"
        android:layout_margin="20dp"
        android:hint="@string/hint_activation_code"
        android:hapticFeedbackEnabled="true"
        android:textColor="@color/text_icons"
        android:layout_below="@+id/code_title"
        android:layout_centerHorizontal="true" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Generate"
        android:id="@+id/button_code_generate"
        android:background="@drawable/button"
        android:textColor="@color/text_primary"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_alignTop="@+id/button_code_cancel"
        android:layout_alignStart="@+id/code_title"
         />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_cancel"
        android:id="@+id/button_code_cancel"
        android:background="@drawable/button_yellow"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_below="@+id/edit_text_code"
        android:layout_alignEnd="@+id/code_title" />

</RelativeLayout>